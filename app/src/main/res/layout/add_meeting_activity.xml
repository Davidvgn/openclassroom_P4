        <TextView
            android:id="@+id/add_meeting_hourTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Heure"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Spinner
            android:id="@+id/add_meeting_hourSpinner"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_meeting_hourTitle" />

        <TextView
            android:id="@+id/add_meeting_h"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="H"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/add_meeting_hourSpinner"
            app:layout_constraintStart_toEndOf="@+id/add_meeting_hourSpinner" />

        <Spinner
            android:id="@+id/add_meeting_minSpinner"
